<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DistrictList">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/districtListTextId"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:padding="1dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/districtScrollId"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/districtListBtnId"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/solanilipi"
                android:textSize="30sp" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/districtListBtnId1"
                style="@android:style/Widget.Material.Button.Colored"
                android:textSize="30sp"
                android:fontFamily="@font/solanilipi"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_width="match_parent"
                android:id="@+id/districtListBtnId2"
                style="@android:style/Widget.Material.Button.Colored"
                android:textSize="30sp"
                android:fontFamily="@font/solanilipi"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_width="match_parent"
                android:id="@+id/districtListBtnId3"
                style="@android:style/Widget.Material.Button.Colored"
                android:textSize="30sp"
                android:fontFamily="@font/solanilipi"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/><Button
                android:layout_width="match_parent"
                android:id="@+id/districtListBtnId4"
                style="@android:style/Widget.Material.Button.Colored"
                android:textSize="30sp"
                android:fontFamily="@font/solanilipi"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/><Button
                android:layout_width="match_parent"
                android:id="@+id/districtListBtnId5"
                style="@android:style/Widget.Material.Button.Colored"
                android:textSize="30sp"
                android:fontFamily="@font/solanilipi"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/><Button
                android:layout_width="match_parent"
                android:id="@+id/districtListBtnId6"
                style="@android:style/Widget.Material.Button.Colored"
                android:textSize="30sp"
                android:fontFamily="@font/solanilipi"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/><Button
                android:layout_width="match_parent"
                android:id="@+id/districtListBtnId7"
                style="@android:style/Widget.Material.Button.Colored"
                android:textSize="30sp"
                android:fontFamily="@font/solanilipi"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/><Button
                android:layout_width="match_parent"
                android:id="@+id/districtListBtnId8"
                style="@android:style/Widget.Material.Button.Colored"
                android:textSize="30sp"
                android:fontFamily="@font/solanilipi"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/><Button
                android:layout_width="match_parent"
                android:id="@+id/districtListBtnId9"
                style="@android:style/Widget.Material.Button.Colored"
                android:textSize="30sp"
                android:fontFamily="@font/solanilipi"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/districtListBtnId10"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/solanilipi"
                android:textSize="30sp" />

            <Button
                android:id="@+id/districtListBtnId11"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/solanilipi"
                android:textSize="30sp" />
            <Button
                android:id="@+id/districtListBtnId12"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/solanilipi"
                android:textSize="30sp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>